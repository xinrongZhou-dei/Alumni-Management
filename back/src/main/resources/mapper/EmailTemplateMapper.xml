<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alumni.back.emailtemplate.EmailTemplateMapper">

    <resultMap id="EmailTemplateResultMap" type="com.alumni.back.Entity.EmailTemplate">
        <id property="id" column="id" />
        <result property="templateName" column="template_name" />
        <result property="content" column="content" />
        <result property="targetType" column="target_type" />
        <result property="theme" column="theme" />
        <result property="createTime" column="create_time" />
        <result property="updateTime" column="update_time" />
    </resultMap>

    <!-- 查询列表（不返回content字段） -->
    <select id="selectListByTargetType" resultType="com.alumni.back.Entity.EmailTemplate">
        SELECT id, template_name, target_type, theme, content, create_time, update_time
        FROM email_template
        WHERE target_type = #{targetType}
        ORDER BY create_time DESC
    </select>

    <!-- 新增 -->
    <insert id="insert" parameterType="com.alumni.back.Entity.EmailTemplate">
        INSERT INTO email_template (id, template_name, content, target_type, theme, create_time, update_time)
        VALUES (#{id}, #{templateName}, #{content}, #{targetType}, #{theme}, NOW(), NOW())
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="com.alumni.back.Entity.EmailTemplate">
        UPDATE email_template
        SET template_name = #{templateName},
            content = #{content},
            target_type = #{targetType},
            theme = #{theme},
            update_time = NOW()
        WHERE id = #{id}
    </update>

    <!-- 删除 -->
    <delete id="deleteById" parameterType="string">
        DELETE FROM email_template WHERE id = #{id}
    </delete>

</mapper> 